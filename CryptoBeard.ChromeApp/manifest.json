{
    "name": "CryptoBeard",
    "description": "Quick analysis and conversion of your crypto portfolio",
    "version": "1.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "/app/assets/crypto-beard-16.png",
        "default_popup": "/app/index.html"
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "/app/assets/crypto-beard-16.png",
        "128": "/app/assets/crypto-beard-128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}